<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <script src="https://kit.fontawesome.com/6ea2cb925f.js" crossorigin="anonymous"></script>
    <title>POS - Purchases</title>
    <!-- Moment -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>

    <!-- Custom fonts for this template-->
    <link rel="stylesheet" href="/stylesheets/all.min.css" />
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet" />

    <!-- Custom styles for this template-->
    <link rel="stylesheet" href="/stylesheets/sb-admin-2.min.css" />

    <!-- Custom styles for this page -->
    <link href="stylesheets/dataTables.bootstrap4.min.css" rel="stylesheet">
</head>

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <%- include('../partials/sidebar.ejs') %>
            <!-- End of Sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">
                <!-- Main Content -->
                <div id="content">
                    <!-- Topbar -->
                    <%- include('../partials/topbar.ejs') %>
                        <!-- End of Topbar -->

                        <!-- Begin Page Content -->
                        <div class="container-fluid">
                            <!-- Page Heading -->
                            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                                <h1 class="h3 mb-0 text-gray-800">Purchases</h1>
                            </div>
                            <p>This is data of Purchases</p>
                        </div>
                        <div class="card">
                            <div class="card-header with-border">
                                <a href="/purchases/add" class="btn btn-primary btn-sm btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-solid fa-plus"></i>
                                    </span>
                                    <span class="text">Add</span>
                                </a>
                            </div>
                            <div class="card-body table-responsive">
                                <table class="table table-bordered" id="datapurchases">
                                    <thead>
                                        <tr>
                                            <th width="25%">Invoice</th>
                                            <th width="20%">Time</th>
                                            <th width="20%">Total Summary</th>
                                            <th width="20%">Supplier</th>
                                            <th width="15%">Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th width="25%">Invoice</th>
                                            <th width="20%">Time</th>
                                            <th width="20%">Total Summary</th>
                                            <th width="20%">Supplier</th>
                                            <th width="15%">Action</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                        <!-- /.container-fluid -->
                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <%- include('../partials/footer.ejs') %>
                    <!-- End of Footer -->
            </div>
            <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->


    <!-- Logout Modal-->
    <%- include('../partials/logoutmodal.ejs')%>

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>
        <!-- Bootstrap core JavaScript-->
        <script src="/javascripts/jquery.min.js"></script>
        <script src="/javascripts/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="/javascripts/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="/javascripts/sb-admin-2.min.js"></script>


        <!-- Page level plugins -->
        <script src="/javascripts/jquery.dataTables.min.js"></script>
        <script src="/javascripts/dataTables.bootstrap4.min.js"></script>

        <!-- Page level custom scripts -->
        <script src="/javascripts/datatables-demo.js"></script>

        <script>
            let iduser = "<%= user.userid %>";
            $(document).ready(() => {
                $('#datapurchases').DataTable({
                    "lengthMenu": [[3, 10, -1], [3, 10, "All"]],
                    "processing": true,
                    "serverSide": true,
                    "ajax": {
                        "url": "/purchases/datatable",
                        "type": "GET"
                    },
                    "columns": [
                        { "data": "invoice" },
                        {
                            "data": "time",
                            "render": (data) => {
                                return moment(data).format('YYYY MMMM DD hh:mm:ss');
                            }
                        },
                        {
                            "data": "totalsum",
                            "render": (data) => {
                                return formatCurrency(data);
                            }
                        },
                        { "data": "name" },
                        {
                            "data": "invoice",
                            "render": (data, type, row) => {
                                if (row.operator.toString() !== iduser) {
                                    return `
                                        <button class="btn btn-circle btn-sm btn-success" disabled>
                                            <i class="fas fa-solid fa-info"></i>
                                        </button>
                                        <button class="btn btn-circle btn-sm btn-danger" disabled>
                                            <i class="fas fa-solid fa-trash"></i>
                                        </button>
                                    `;
                                } else {
                                    return `
                                        <a href="/purchases/edit/${data}" class="btn btn-circle btn-sm btn-success">
                                            <i class="fas fa-solid fa-info"></i>
                                        </a>
                                        <a class="btn btn-circle btn-sm btn-danger" data-toggle="modal" data-target="#deleteModal${data}">
                                            <i class="fas fa-solid fa-trash"></i>
                                        </a>
                                        <div class="modal fade" id="deleteModal${data}" tabindex="-1" role="dialog"
                                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Deleted Confirmation</h5>
                                                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">Ã—</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">Are you sure you want to delete it?</div>
                                                    <div class="modal-footer">
                                                        <button class="btn btn-secondary" type="button" data-dismiss="modal">No</button>
                                                        <a class="btn btn-primary" href="/purchases/delete/${data}">Yes</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    `;
                                }
                            },
                            "orderable": false
                        }
                    ]
                });
            });

            function formatCurrency(value) {
                const formatter = new Intl.NumberFormat('id-ID', {
                    style: 'currency',
                    currency: 'IDR',
                    currencyDisplay: 'symbol',
                });
                return formatter.format(value).replace('IDR', 'Rp.');
            }

        </script>

</body>

</html>